# MQTT Connection, if empty will query and use hassio provided mqtt
mqtt:
  host: 192.168.0.xxx
  port: 1883
  ssl: false
  username: xxxxxxxxxxxxxx
  password: xxxxxxxxxxxxx

# This gets added to the x,y,z to derive a gps location
gps:
  #55°45'50"N 12°30'34"E
  latitude: 55.7638889
  longitude: 12.50944444
  elevation: 0

optimization:
  enabled: true
  interval_secs: 3600
  limits:
    absorption_min: 1
    absorption_max: 10
    tx_ref_rssi_min: -70
    tx_ref_rssi_max: -50
    rx_adj_rssi_min: -15
    rx_adj_rssi_max: 20

weighting:
  algorithm: gaussian
  props:
    sigma: 0.10

# Floors w/ the points to draw it in meters
floors:
  - id: first
    name: First Floor
    # Bounds (x,y,z) of map in meters
    bounds: [[0, 0, 0], [8, 8, 3]]
    rooms:
      - name: Livingroom
        points:
          - [0, 0]
          - [3.9, 0]
          - [3.9, 3.5]
          - [3.02, 4.6]
          - [0, 4.6]
      - name: Bedroom
        points:
          - [3.9, 0.3]
          - [4.2, 0.3]
          - [4.2, 0]
          - [7.85, 0]
          - [7.85, 3.5]
          - [3.9, 3.5]
      - name: Kitchen
        points:
          - [7.85, 3.5]
          - [7.85, 5.8]
          - [5.65, 5.8]
          - [5.65, 3.5]
      - name: Bathroom
        points:
          - [5.65, 4.5]
          - [5.65, 5.8]
          - [3.75, 5.8]
          - [3.75, 5.3]
          - [4.5, 4.5]
      - name: Entrance
        points:
          - [5.65, 3.5]
          - [5.65, 4.5]
          - [4.5, 4.5]
          - [3.75, 5.3]
          - [3.02, 4.6]
          - [3.9, 3.5]

# Locations of espresense nodes in meters
nodes:
  - name: Stuen
    point: [1.3, 0.2, 1]
    floors: ["first"]
  - name: Sovevaerelset
    point: [7.6, 0.8, 2.5]
    floors: ["first"]
  - name: Koekken
    point: [6, 3.6, 1.9]
    floors: ["first"]

# Devices to track
devices:
  - id: "iBeacon:iBeacon:c6eb3e55-4262-4637-xxxxxx"
    name: "Victors Pixel 6"
  - name: "*" # Track all named devices
  - id: "tile:*" # Track all tiles
  - id: "irk:*" # Track all IRKs
  - id: "watch:*"
  - id: "phone:*"
  - id: "wallet:*"
  - id: "keys:*"
  - id: "therm:*"
  - id: "ibeacon:*"
  - id: "iBeacon:*"
